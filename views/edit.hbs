<div class="container mt-5">
  <h4 class="text-center">正在編輯: {{record.name}}</h4>
  <form action="/records/{{record._id}}?_method=PUT" method="POST" id="edit-form" class="mx-auto">
    <small class="hint d-block mb-2">*必填欄位</small>


    <div class="form-group">
      <label for="name">名稱*</label>
      <input type="text" class="form-control" id="name" name="name" aria-describedby="nameHelp" value="{{record.name}}"
        required>
    </div>

    <div class="form-group">
      <label for="date">日期*</label>
      <input type="date" class="form-control" id="date" name="date" aria-describedby="dateHelp" value="{{record.date}}"
        required>
    </div>

    <div class="form-group">
      <label for="category">類別*</label>
      <select class="form-control" id="category" name="category">
        <option disabled>Select</option>
        {{#each categoryList}}
        <option value="{{this._id}}" {{#if_idEqual this._id ../record.category}}selected{{/if_idEqual}}>{{this.name}}
        </option>
        {{/each}}
      </select>
    </div>

    <div class="form-group">
      <label for="amount">金額*</label>
      <input type="number" class="form-control" id="amount" name="amount" aria-describedby="amountHelp"
        value="{{record.amount}}" required>
    </div>

    <button type="submit" class="btn btn-success" onclick="return confirm('確定要修改此筆支出?')">送出</button>

  </form>
</div>