<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h2 class="text-center mt-3">會員註冊</h2>
      <form action="/users/register" method="POST">
        <div class="form-group">
          <label for="name">姓名</label>
          <input type="text" id="name" name="name" class="form-control" placeholder="請輸入姓名">
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="請輸入Email">
        </div>
        <div class="form-group">
          <label for="password">密碼</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="請輸入密碼">
        </div>
        <div class="form-group">
          <label for="confirmPassword">確認密碼</label>
          <input type="password" id="confirmPassword" name="confirmPassword" class="form-control"
            placeholder="請再輸入一次密碼">
        </div>
        <button type="submit" class="btn btn-primary btn-block">送出</button>
      </form>
      <p class="lead mt-4">
        已有帳號? <a href="/users/login">登入</a>
      </p>
    </div>
  </div>
</div>